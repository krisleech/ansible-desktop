general {
        colors = true
        interval = 5
}

order += "volume master"
/* order += "ipv6" */
order += "disk /"
order += "path_exists MySQL"
order += "path_exists Redis"
/* order += "run_watch DHCP" */
/* order += "run_watch VPNC" */
order += "path_exists VPN"
/* order += "wireless wlan0" */
order += "ethernet enp0s31f6"
/* order += "battery 0" */
/* order += "cpu_temperature 0" */
order += "load"
order += "tztime local"

wireless wlan0 {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
}

ethernet enp0s31f6 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "LAN: %ip (%speed)"
        format_down = "LAN: down"
}

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "âš‡ CHR"
        status_bat = "âš¡ BAT"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

path_exists MySQL {
        path = "/var/run/mysqld/mysqld.pid"
        format_down = ""
}

path_exists Redis {
        path = "/var/run/redis/redis-server.pid"
        format_down = ""
}

run_watch VPNC {
        # file containing the PID of a vpnc process
        format_down = ""
        pidfile = "/var/run/vpnc/pid"
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        format_down = ""
        path = "/proc/sys/net/ipv4/conf/tun0"
}

tztime local {
        format = "%a %d/%b/%Y %H:%M %Z"
}

tztime berlin {
        format = "%Y-%m-%d %H:%M:%S %Z"
        timezone = "Europe/Berlin"
}

load {
        format = "Load %5min"
}

cpu_temperature 0 {
        format = "T: %degrees Â°C"
        path = "/sys/devices/platform/coretemp.0/temp1_input"
}

disk "/" {
        /* low_threshold = 10 */
        /* thershold_type = percentage_free */
        format = "Free: %free (%percentage_free)"
}

